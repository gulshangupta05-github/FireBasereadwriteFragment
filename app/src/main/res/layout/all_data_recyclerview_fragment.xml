<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".alldatarecyclerview.AllDataRecyclerviewFragment"
    android:orientation="vertical">

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/nextativity"-->
<!--        android:orientation="horizontal"-->
<!--        tools:ignore="MissingConstraints">-->

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="25dp"/>

    <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:textSize="25dp"
        android:textColor="#000" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:textSize="25dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvFather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvMother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvPostal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvCompanyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Button"
        android:id="@+id/edit_profile"
        android:textSize="25dp"
        android:textColor="#F5F5F6"
        android:textAllCaps="true"
        android:background="#619A1F"/>

    </LinearLayout>

